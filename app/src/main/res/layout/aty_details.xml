<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TopStatus">

        <ImageView
            android:id="@+id/iv_atyFetch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="订单详细信息"
            android:textColor="@color/white" />


    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingLeft="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="订单号  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="123456789011"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单时间  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="2018-2-1 16:39"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="订单状态  :  "
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="派送中"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="8sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单方式"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="临时下单"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="南京信息工程大学东苑硕园2栋124"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货时间"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18：30~20：30"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="9sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="取货方式"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="信任好友代拿"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信任好友"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHARLES"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/blue"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="9sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="快递体积"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="小"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="8sp"
                    android:background="@drawable/sp_line"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递数量"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingRight="17sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="6sp"
                    android:background="@drawable/sp_line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:layout_marginBottom="5sp"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="感谢UD的优质服务！"
                        android:paddingRight="10sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="9sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系派送员"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678910"
                        android:paddingRight="15sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_atyFetch_submit"
                style="@style/default_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/item_btn"
                android:gravity="center"
                android:text="订单二维码"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
