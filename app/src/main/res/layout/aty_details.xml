<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TopStatus">

        <ImageView
            android:id="@+id/Fetch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="填写订单信息"
            android:textColor="@color/white" />


    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="订单号 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（订单号）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="1sp">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单时间 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（下单时间）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="领取方式 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（领取方式）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="快递体积 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（快递体积）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="快递数量 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（快递数量）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5sp"
                        android:text="备注 :"
                        android:textColor="@color/text_clo" />

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（备注）"
                        android:textColor="@color/text_clo" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10sp">

                <RelativeLayout
                    android:id="@+id/rl_aty_details_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="下单方式"
                        android:textColor="@color/text_clo"/>

                    <TextView
                        style="@style/min_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:text="（下单方式）"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5sp"
                    android:layout_marginBottom="4sp"
                    android:background="@drawable/sp_line"></View>

                <TextView
                    style="@style/default_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南京信息工程大学硕园0栋000"
                    android:textColor="@color/text_clo"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_aty_fetch_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="10sp">

                <TextView
                    style="@style/default_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="请选择快递点"
                    android:textColor="@color/text_clo" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/point_spinner"
                        style="@style/spinner_bar"
                        android:background="@color/transparent" />

                    <ImageView
                        style="@style/spinner_btn"
                        android:layout_alignBottom="@+id/area_spinner_mng"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="24dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="5sp"
                        android:layout_alignBottom="@+id/point_spinner"
                        android:background="@drawable/sp_line"></View>


                </RelativeLayout>

                <TextView
                    style="@style/default_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="请填写取货号"
                    android:textColor="@color/text_clo" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tv_order_takenum"
                        style="@style/spinner_bar"
                        android:background="@color/transparent"
                        android:hint="如：5601"
                        android:inputType="number"
                        android:paddingLeft="7sp"
                        android:singleLine="true" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="5sp"
                        android:layout_alignBottom="@+id/tv_order_takenum"
                        android:background="@drawable/sp_line"></View>


                </RelativeLayout>
            </LinearLayout>




            <Button
                android:id="@+id/fetch_summit"
                style="@style/default_text"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/item_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
