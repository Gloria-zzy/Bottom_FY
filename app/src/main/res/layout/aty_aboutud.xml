        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/team_title"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="5sp"
            android:text="版本号"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="v1.0.0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/team_title"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="5sp"
            android:text="联系我们"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TEL"/>

        <TextView
            android:layout_width="match_parent"
